<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" id="platosModelDetailsScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <ScrollView>
        <StackLayout>

            <GridLayout rows="auto, *">
                <GridLayout rows="auto" columns="*, *">


                </GridLayout>
                <StackLayout row="1">


                    <Image width="100" height="100" src="{{ imagen }}" />


                    <Label text="{{ nombre }}" />


                    <TextView text="{{ descripcion }}" />


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--heading" id="diaField">


                        <Label col="0" row="1" text="{{ dia }}" cssClass="h1" textWrap="true" />

                        <!-- dia content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--heading" id="precioField">


                        <Label col="0" row="1" text="{{ precio }}" cssClass="h5" textWrap="true" />

                        <!-- precio content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- additional view content -->


                </StackLayout>
            </GridLayout>

        </StackLayout>
    </ScrollView>
</Page>