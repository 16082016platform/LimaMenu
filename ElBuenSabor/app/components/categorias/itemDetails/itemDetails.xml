<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" id="categoriasModelDetailsScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <ScrollView>
        <StackLayout>

            <GridLayout rows="auto, *">
                <GridLayout rows="auto" columns="*, *">


                </GridLayout>
                <StackLayout row="1">


                    <Label text="{{ nombre }}" />


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--heading" id="nombreField">


                        <Label col="0" row="1" text="{{ nombre }}" cssClass="h1" textWrap="true" />

                        <!-- nombre content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textBlock" id="platoField">


                        <Label text="plato" cssClass="label" colSpan="2" row="0" />


                        <Label colSpan="2" row="1" text="{{ platos }}" cssClass="label" textWrap="true" />

                        <!-- plato content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- additional view content -->


                </StackLayout>
            </GridLayout>

        </StackLayout>
    </ScrollView>
</Page>