<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatedTo="onNavigatedTo" loaded="pageLoaded" id="direccionesModelEditScreen" cssClass="screen">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="Edit" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>

        <StackLayout row="1">
            <ScrollView>

                <StackLayout row="1">


                    <GridLayout columns="*" rows="auto, auto" cssClass="form-item field field--text" id="direccionEditField">


                        <Label text="Direccion" cssClass="label" col="1" row="0" />


                        <TextField col="1" row="1" text="{{ direccionEdit }}" />

                        <!-- direccionEdit content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--text" id="numeroField">


                        <Label text="NÃºmero" cssClass="label" col="0" row="1" />


                        <TextField col="1" row="1" text="{{ numero }}" />

                        <!-- numero content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textArea" id="referenciaField">


                        <Label text="Referencia" cssClass="label" col="0" row="0" />

                        <TextView colSpan="2" row="1" textWrap="true" height="100" text="{{ referencia }}" />
                        <!-- referencia content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--switch" id="activoField">


                        <Label text="Activo" cssClass="label" col="0" row="1" />

                        <Switch col="1" row="1" checked="{{ activo }}" />
                        <!-- activo content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- editableListForm21 additional fields -->


                </StackLayout>
                <!-- additional view content -->

            </ScrollView>
        </StackLayout>

    </GridLayout>
</Page>