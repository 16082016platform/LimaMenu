<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" id="historialModelDetailsScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <ScrollView>
        <StackLayout>

            <GridLayout rows="auto, *">
                <GridLayout rows="auto" columns="*, *">


                </GridLayout>
                <StackLayout row="1">


                    <Label text="{{ codigo }}" />


                    <TextView text="{{ cantidad }}" />


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--heading" id="cantidadField">


                        <Label col="0" row="1" text="{{ estado }}" cssClass="h1" textWrap="true" />

                        <!-- cantidad content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- additional view content -->

                </StackLayout>
            </GridLayout>

        </StackLayout>
    </ScrollView>
</Page>